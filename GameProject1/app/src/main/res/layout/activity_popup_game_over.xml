<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/popup"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="490dp"
    android:orientation="vertical"
    android:background="#FFFFFFFF"
    app:cardBackgroundColor="@color/colorBabyYellow"
    app:cardCornerRadius="25dp"
    app:cardUseCompatPadding="true"
    tools:context=".PopupGameOverActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_replay"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/replay_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.843"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_score" />

        <TextView
            android:id="@+id/text_score"
            android:layout_width="137dp"
            android:layout_height="65dp"
            android:gravity="center"
            android:textColor="@color/browser_actions_text_color"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_score"
            app:layout_constraintEnd_toEndOf="@+id/imageView_score"
            app:layout_constraintStart_toStartOf="@+id/imageView_score"
            app:layout_constraintTop_toTopOf="@+id/imageView_score"
            app:layout_constraintVertical_bias="0.796" />

        <ImageView
            android:id="@+id/imageView_score"
            android:layout_width="320dp"
            android:layout_height="180dp"
            android:src="@drawable/image_bear"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.732" />



        <TextView
            android:id="@+id/text_best_score"
            android:layout_width="137dp"
            android:layout_height="65dp"
            android:textColor="@color/browser_actions_text_color"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_best"
            app:layout_constraintEnd_toEndOf="@+id/imageView_best"
            app:layout_constraintStart_toStartOf="@+id/imageView_best"
            app:layout_constraintTop_toTopOf="@+id/imageView_best"
            app:layout_constraintVertical_bias="0.815" />

        <ImageView
            android:id="@+id/imageView_best"
            android:layout_width="320dp"
            android:layout_height="180dp"
            android:src="@drawable/image_bear"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.054" />

        <Button
            android:id="@+id/button_home"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/homebutton_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.194"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_score" />

        <TextView
            android:id="@+id/text_best"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="★Best Score★"
            android:textColor="@color/browser_actions_text_color"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/text_best_score"
            app:layout_constraintEnd_toEndOf="@+id/imageView_best"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="@+id/imageView_best"
            app:layout_constraintTop_toTopOf="@+id/imageView_best"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/text_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:textColor="@color/browser_actions_text_color"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/text_score"
            app:layout_constraintEnd_toEndOf="@+id/imageView_score"
            app:layout_constraintHorizontal_bias="0.258"
            app:layout_constraintStart_toStartOf="@+id/text_best"
            app:layout_constraintTop_toTopOf="@+id/imageView_score"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>